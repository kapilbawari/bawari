{
  "hosting": {
    "public": "out",
    "rewrites": [
      {
        "source": "/login",
        "destination": "/login"  // लॉगिन पृष्ठ
      },
      {
        "source": "/signup",
        "destination": "/signup"  // साइनअप पृष्ठ
      },
      {
        "source": "/profile",
        "destination": "/profile"  // प्रोफ़ाइल पृष्ठ
      },
      {
        "source": "/**",
        "destination": "/index.html"  // अन्य सभी अनुरोधों को index.html पर रीराइट करें
      }
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  }
}
